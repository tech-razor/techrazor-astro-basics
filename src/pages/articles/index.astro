---
import Layout from '../../layouts/Layout.astro';

// Pretend articles are fetched from a backend database
const articles = [
  { id: 1, title: 'Learning JavaScript', slug: 'learning-javascript' },
  { id: 2, title: 'The basics of Python', slug: 'the-basics-of-python' }
];
---

<Layout pageTitle="Articles">
  <h1>Articles</h1>
  <section>
    {
      articles.map((article) => (
        <p>
          <a href={`/articles/${article.id}-${article.slug}`}>
            {article.title}
          </a>
        </p>
      ))
    }
  </section>
</Layout>
